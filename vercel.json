{
  "version": 2,
  "builds": [
    {
      "src": "api/convert.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "node_modules/sharp/**/*",
          "node_modules/color/**/*"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/convert",
      "dest": "/api/convert.js",
      "methods": ["POST"]
    }
  ]
}
